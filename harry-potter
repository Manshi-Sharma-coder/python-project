import random
import time


RED="\033[31m"
GREEN="\033[32m"
YELLOW="\033[33m"
BLUE="\033[34m"
RESET="\033[0m"

while True:

    from colorama import Fore
    import pyfiglet
    

    name1 = pyfiglet.figlet_format("harry potter" , font ="standard")
    print(Fore.GREEN + name1)

    name2 = pyfiglet.figlet_format("Jussi" , font ="standard")
    print(Fore.YELLOW + name2)

    
   
    print(BLUE +"let start the game" + RESET)

    score = 0
    print("\033[1;47mLet's start the quiz.\033[0m")

    TOTAL_QUESTIONS = 5

    
    number=[1,2,3,4,5]
    random.shuffle(number)

    for question_number in number:

        if question_number == 1:
            print(YELLOW +"\033[45m\nQuestion : What is Harry's house?" + RESET)
            print("a) Gryffindor")
            print("b) Hufflepuff")
            print("c) Ravenclaw") 
            print("d) Slytherin")

            answer = input("Your answer: ").lower()
            if answer == "a":
                print(GREEN + "ðŸ¤—Correct!" + RESET)
                score += 1
            else:
                print(RED + "Wrong! The correct answer is a) Gryffindor." + RESET)

        elif question_number == 2:
            print(YELLOW + "\033[46m\nQuestion : Who is the author of the Harry Potter series?" + RESET)
            print("a) J.R.R. Tolkien")
            print("b) J.K. Rowling")
            print("c) George R.R. Martin")
            print("d) C.S. Lewis")

            answer = input("Your answer: ").lower()
            if answer == "b":
                print(GREEN + "âœ¨Correct!" + RESET)
                score += 1
            else:
                print(RED + "Wrong! The correct answer is b) J.K. Rowling." + RESET)

        elif question_number == 3:
            print(YELLOW + "\033[44m\nQuestion : What position does Harry play on his Quidditch team?" + RESET)
            print("a) Beater")
            print("b) Chaser")
            print("c) Seeker")
            print("d) Keeper")

            answer = input("Your answer: ").lower()
            if answer == "c":
                print(GREEN + "âœ¨Correct!" + RESET)
                score += 1
            else:
                print(RED + "Wrong! The correct answer is c) Seeker." + RESET)

        elif question_number == 4:
            print(YELLOW + "\033[42m\nQuestion : What is the name of Harry's pet owl?" + RESET)
            print("a) Crookshanks")
            print("b) Hedwig")
            print("c) Scabbers")
            print("d) Fang")

            answer = input("Your answer: ").lower()
            if answer == "b":
                print(GREEN + "ðŸŽŠCorrect!" + RESET)
                score += 1
            else:
                print(RED + "Wrong! The correct answer is b) Hedwig." + RESET)

        elif question_number == 5:
            print(YELLOW + "\033[41m\nQuestion : What spell is used to disarm an opponent?" + RESET)
            print("a) Expelliarmus")
            print("b) Stupefy")
            print("c) Lumos")
            print("d) Accio")

            answer = input("Your answer: ").lower()
            if answer == "a":
                print(GREEN + "ðŸŽŠCorrect!" + RESET)
                score += 1
            else:
                print(RED + "Wrong! The correct answer is a) Expelliarmus." + RESET)

    
    print(BLUE + f"\nQuiz over! Your final score is {score} out of {TOTAL_QUESTIONS}." + RESET)

    percentage = (score / TOTAL_QUESTIONS) * 100

    if percentage >= 80:
        print(GREEN + "ðŸŽŠExcellent work!ðŸŽŠ" + RESET)
    elif percentage >= 50:
        print(YELLOW + "Good effort!" + RESET)
    else:
        print(RED + "Better luck next time!" + RESET)

    
    play_again = input("Do you want to play again? (yes/no): ").lower()

    if play_again != "yes":
        print("Thank you for playing! Goodbye!")
        break
